<Window x:Class="SAE2_01.Inscription_course"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE2_01"
        mc:Ignorable="d"
        Title="Inscription_course" Height="720" Width="1280">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70*" />
                <RowDefinition Height="85*" />
                <RowDefinition Height="549*" />
            </Grid.RowDefinitions>
            <Image
                Width="138"
                Height="70"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                RenderTransformOrigin="0.5,0.5"
                Source="/Image/Logo-Semi-Beaune-removebg-preview.jpg"
                Stretch="Fill">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="0" />
                        <TranslateTransform />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Rectangle
                Width="216"
                Height="70"
                Margin="1052,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Image/logo BEAUNE.jpg" />
                </Rectangle.Fill>
            </Rectangle>
        <WrapPanel Grid.Row="1">
            <Button
                    Grid.Row="1"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="">
                <Button.Background>
                    <ImageBrush ImageSource="/Image/Logo_home.jpg" />
                </Button.Background>
            </Button>
            <Button Content="Inscription course" Height="20"/>
            <Button
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Visualiser course" />
            <Button Content="Visualiser coureur" Height="20"/>
            <Button Content="Se connecter" Height="20"/>
        </WrapPanel>
    </Grid>
</Window>
